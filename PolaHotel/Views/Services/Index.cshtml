@model IEnumerable<PolaHotel.Models.Services>

@{
    ViewBag.Title = "Index";
}

<h4>All Services</h4>
<hr />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-primary"})
</p>
<table class="table table-hover">
    <thead class="bg-dark" style="color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
               Extra Charge
            </th>
            <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @if (item.isExtracharge)
                    {
                        <p style="padding:5px;background:green;width:140px;border-radius:10px;color:white" class="text-center">Extra Charge</p>
                    }
                    else
                    {
                        <p style="padding:5px;width:140px;border-radius:10px;" class="text-center">No Extra Charge</p>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info", @style = "width:70px" }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary", @style = "width:70px;color:white" }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", @style = "width:70px" })
                </td>
            </tr>
        }

</table>
