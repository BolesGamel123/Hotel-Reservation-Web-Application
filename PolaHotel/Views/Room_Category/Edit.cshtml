@model PolaHotel.Models.Room_Category

@{
    ViewBag.Title = "Edit";
}

<style>
    body {
        background: #808080
    }

    .form {
        background: white;
        margin: auto auto;
        padding: 20px;
        border-radius: 10px;
        width: 100%
    }

    .control-label {
        font-weight: bold;
        color: #808080;
    }
</style>
<div class="container">

    @using (Html.BeginForm("Edit", "Room_Category", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Room Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.catID)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.View, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.View, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.View, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <label class="control-label">Add Image</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="upload" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <br><br />
                        <div class="row" style="float:right">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-success" })

                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="submit" value="Save" class="btn btn-primary" />

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
