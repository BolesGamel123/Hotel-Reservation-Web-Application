@model IEnumerable<PolaHotel.Models.Room>



@{
    ViewBag.Title = "GetRoomForCategory";
    Layout = "~/Views/Shared/_Test.cshtml";

}
<div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
                <strong>Hotel</strong>
            </div>
        </div>
    </div>
</div>
<!-- Preloader Start -->
<!-- slider Area Start-->
<div class="slider-area">
    <div class="single-slider hero-overly slider-height2 d-flex align-items-center" style=" background-image: url('/Content/Images/Room.jpg');">
        <div class="container">
            <div class="row ">
                <div class="col-md-11 offset-xl-1 offset-lg-1 offset-md-1">
                    <div class="hero-caption">
                        <span>Room</span>
                        <h2>Room</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container" style="margin-top:50px">
    <div class="row">
        @foreach (var item in Model)
        {


            <div class="card col-lg-4" style="width:400px">
                <img class="card-img-top" src="~/Content/Images/@item.Image" alt="Card image" style="width:100%;height: 200px;">
                <div class="card-body">
                    <h4 class="card-title"><b>@item.Description</b></h4>



                </div>

            </div>


        }
    </div>
</div>



